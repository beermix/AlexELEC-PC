. /etc/profile

SERVICE="vdr.service"
LOCK_DIR="/var/lock"

case "$1" in
  pre)
    if systemctl is-active "$SERVICE" &>/dev/null ; then
      progress "stoping $SERVICE ($1)..."
      systemctl stop "$SERVICE"
      rm -f $LOCK_DIR/dvb-fw.load
    fi
    ;;
  post)
    if [ -f "$LOCK_DIR/start.vdr" ] ; then
      progress "starting $SERVICE ($1)..."
      systemctl start "$SERVICE"
    fi
    ;;
esac
